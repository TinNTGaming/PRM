<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ImageViewSignIn"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scaleType="centerCrop"
        android:src="@drawable/welcom" />

    <View
        android:id="@+id/vector_1"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="440dp"

        />

    <TextView
        android:id="@+id/welcom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="500dp"

        android:gravity="center"
        android:text="Xin Chào"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/welcom1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:layout_marginTop="550dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"


        android:text="Hãy đăng ký tài khoản để trải nghiệm những giá trị mà
chúng tôi mang lại nhé!"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/SigUpSlapt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:text="Đăng Ký Tài Khoản"
        android:textColor="@android:color/white"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dangky"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_weight="1"
            android:text="Bạn đã có tài khoản? "

            android:textSize="16sp" />

        <Button
            android:id="@+id/dangnhapButton"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Đăng Nhập"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
